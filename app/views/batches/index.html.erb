<p id="notice"><%= notice %></p>

<h2>Batchar</h2>

<table>
  <thead>
    <tr>
      <th>Namn</th>
      <th>Mängd</th>
      <th>Påfyllningsbar</th>
      <th>Okänd mängd</th>
      <th>Enhet</th>
      <th>Fodertyp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @batches.each do |batch| %>
      <tr>
        <td><%= batch.name %></td>
        <td><%= batch.amount %></td>
        <td><%= batch.refillable %></td>
        <td><%= batch.unknownAmount %></td>
        <td><%= batch.unit %></td>
        <td><%= batch.fodderType %></td>
        <td><%= link_to 'Visa', batch %></td>
        <td><%= link_to 'Ändra', edit_batch_path(batch) %></td>
        <td><%= link_to 'Ta bort', batch, method: :delete, data: { confirm: 'Är du säker?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Start', start_index_path %>
<%= link_to 'Ny batch', new_batch_path %>
